{
  "compilerOptions": { 
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
     "lib": [
        "es6"
     ],
     "target": "es6",
     "module": "CommonJS",
     "outDir": "dist",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "noImplicitAny": false,
     "removeComments": false,
     "preserveConstEnums": true,
  },
  "include": ["src/**/*.ts"],
  "exclude": [
      "dist",
      "node_modules"
    ]
}

